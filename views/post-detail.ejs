<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= post.title %></title>
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: flex-start;
            min-height: 100vh;
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #f9f9f9;
            padding: 20px;
        }

        .container {
            width: 100%;
            max-width: 900px;
            background-color: #fff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        h1 {
            text-align: center;
            font-size: 1.8em;
            margin-bottom: 10px;
        }

        .meta-info {
            display: flex;
            justify-content: space-between;
            font-size: 0.9em;
            color: #555;
            margin-bottom: 15px;
        }

        .content {
            font-size: 1.2em;
            line-height: 1.8;
            color: #333;
            margin-bottom: 30px;
        }

        hr {
            margin: 15px 0;
            border: 0;
            border-top: 1px solid #ddd;
        }

        .likes-dislikes {
            display: flex;
            justify-content: space-around;
            align-items: center;
            margin-top: 20px;
        }

        .likes-dislikes div {
            text-align: center;
        }

        .likes-dislikes button {
            padding: 10px 20px;
            font-size: 1em;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .like-btn {
            background-color: #28a745;
        }

        .like-btn:hover {
            background-color: #218838;
        }

        .dislike-btn {
            background-color: #dc3545;
        }

        .dislike-btn:hover {
            background-color: #c82333;
        }

        .button-container {
            display: flex;
            justify-content: space-between;
            margin-top: 30px;
        }

        .button-container a,
        .button-container form button {
            padding: 12px 25px;
            font-size: 1.1em;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            color: #fff;
            text-align: center;
            text-decoration: none;
        }

        .edit-button {
            background-color: #007bff;
        }

        .edit-button:hover {
            background-color: #0056b3;
        }

        .delete-button {
            background-color: #dc3545;
        }

        .delete-button:hover {
            background-color: #b21f2d;
        }

        .back-button {
            display: block;
            width: auto;
            margin-top: 20px;
            text-align: center;
            padding: 12px 25px;
            font-size: 1.1em;
            background-color: #6c757d;
            color: #fff;
            border-radius: 5px;
            text-decoration: none;
            cursor: pointer;
        }

        .back-button:hover {
            background-color: #5a6268;
        }

        /* 댓글 섹션 스타일 */
        #comments-section {
            margin-top: 40px;
        }

        #comment-list {
            list-style: none;
            padding: 0;
        }

        #comment-list li {
            margin-bottom: 15px;
            padding: 10px;
            border-bottom: 1px solid #ddd;
        }

        #comment-list strong {
            display: block;
            font-weight: bold;
            margin-bottom: 5px;
        }

        textarea {
            width: 100%;
            margin-top: 10px;
            padding: 10px;
            border-radius: 5px;
            border: 1px solid #ddd;
        }

        button[type="submit"] {
            margin-top: 10px;
            padding: 10px 20px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        button[type="submit"]:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1><%= post.title %></h1>
        <div class="meta-info">
            <span><strong>작성자:</strong> <%= post.author %></span>
            <span><strong>작성 시간:</strong> <%= new Date(post.createdAt).toLocaleString() %></span>
        </div>
        <hr>
        <div class="content">
            <%- post.content.replace(/\n/g, '<br>') %>
        </div>

        <!-- 좋아요/싫어요 영역 -->
        <div class="likes-dislikes">
            <div>
                <button class="like-btn" id="like-btn">👍 좋아요</button>
                <p>좋아요: <span id="like-count"><%= post.likes || 0 %></span></p>
            </div>
            <div>
                <button class="dislike-btn" id="dislike-btn">👎 싫어요</button>
                <p>싫어요: <span id="dislike-count"><%= post.dislikes || 0 %></span></p>
            </div>
        </div>

        <!-- 댓글 섹션 -->
        <hr>
        <div id="comments-section">
            <h2>댓글</h2>
            <ul id="comment-list">
                <% if (post.comments && post.comments.length > 0) { %>
                    <% post.comments.forEach(comment => { %>
                        <li>
                            <strong><%= comment.author %></strong>
                            <p><%- comment.content.replace(/\n/g, '<br>') %></p>
                            <small style="color: #888;">작성 시간: <%= new Date(comment.createdAt).toLocaleString() %></small>
                        </li>
                    <% }) %>
                <% } else { %>
                    <p>댓글이 없습니다. 첫 댓글을 작성해 보세요!</p>
                <% } %>
            </ul>

            <form id="comment-form" action="/boards/<%= post._id %>/comments" method="POST">
                <textarea name="content" rows="3" placeholder="댓글을 입력하세요" required></textarea>
                <button type="submit">댓글 작성</button>
            </form>
        </div>

        <!-- 수정 및 삭제 버튼 -->
        <div class="button-container">
            <a href="/boards/<%= post._id %>/edit" class="edit-button">수정</a>
            <form action="/boards/<%= post._id %>?_method=DELETE" method="POST">
                <button type="submit" class="delete-button">삭제</button>
            </form>
        </div>

        <!-- 목록으로 돌아가기 버튼 -->
        <a href="/boards" class="back-button">뒤로가기</a>
    </div>

    <script>
        const likeBtn = document.getElementById('like-btn');
        const dislikeBtn = document.getElementById('dislike-btn');

        likeBtn.addEventListener('click', async () => {
            const res = await fetch(`/boards/<%= post._id %>/like`, { method: 'POST' });
            if (res.ok) {
                const data = await res.json();
                document.getElementById('like-count').innerText = data.likes;
            } else {
                console.error('좋아요 업데이트 실패');
                alert('좋아요를 업데이트할 수 없습니다.');
            }
        });

        dislikeBtn.addEventListener('click', async () => {
            const res = await fetch(`/boards/<%= post._id %>/dislike`, { method: 'POST' });
            if (res.ok) {
                const data = await res.json();
                document.getElementById('dislike-count').innerText = data.dislikes;
            } else {
                console.error('싫어요 업데이트 실패');
                alert('싫어요를 업데이트할 수 없습니다.');
            }
        });
    </script>
</body>
</html>