<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>게시판</title>
    <style>
        table {
            width: 80%;
            margin: auto;
            border-collapse: collapse;
        }

        th, td {
            padding: 15px;
            text-align: center;
            border: 1px solid #ddd;
        }

        th {
            background-color: #f4f4f4;
            font-size: 1.2em;
        }

        td {
            font-size: 1.1em;
        }

        body {
            font-family: Arial, sans-serif;
            background-color: #f9f9f9;
        }

        h1 {
            text-align: center;
        }

        a {
            text-decoration: none;
            color: #007bff;
        }

        a:hover {
            text-decoration: underline;
        }

        button {
            cursor: pointer;
            padding: 10px 20px;
            font-size: 1em;
        }

        .button-container {
            width: 80%;
            margin: 20px auto;
            text-align: right;
        }

        .likes, .dislikes {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 5px;
        }

        .likes .icon, .dislikes .icon {
            font-size: 1.2em;
        }

        .likes span, .dislikes span {
            font-weight: bold;
        }
    </style>
</head>
<body>
    <h1>게시판</h1>

    <!-- 게시글 목록 -->
    <table>
        <thead>
            <tr>
                <th>제목</th>
                <th>작성자</th>
                <th>좋아요</th>
                <th>싫어요</th>
            </tr>
        </thead>
        <tbody>
            <% posts.forEach(post => { %>
                <tr>
                    <td><a href="/boards/<%= post._id %>"><%= post.title %></a></td>
                    <td><%= post.author %></td>
                    <td>
                        <div class="likes">
                            <span class="icon">👍</span>
                            <span><%= post.likes || 0 %></span>
                        </div>
                    </td>
                    <td>
                        <div class="dislikes">
                            <span class="icon">👎</span>
                            <span><%= post.dislikes || 0 %></span>
                        </div>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>

    <!-- 게시글 추가 버튼 -->
    <div class="button-container">
        <a href="/boards/new"><button>게시글 추가</button></a>
    </div>
</body>
</html>